    "version": "0.2.0",
    "configurations": [
        {
            "name": "huffc",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/huffc",
            "args": ["books/aladdin.txt", "aladdin.he"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
